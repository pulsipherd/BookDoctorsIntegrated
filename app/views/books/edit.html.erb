<h1>Edit Page</h1>
<%= form_for @book do |f| %>
  <%= f.label :title %> 
  <%= f.text_field :title %> <br><br>

  <%= f.label :author %>
  <%= f.text_field :author %><br><br>

  <%= f.label :body %>
<section id="bigtext">  <%= f.text_area :body %></section><br><br>

  <%= f.label :keywords %>
  <%= f.text_field :keywords, class: "big_field" %><br><br>

  <%= f.submit %>
<% end %>